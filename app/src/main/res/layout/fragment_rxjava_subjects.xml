<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/type_publish"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:id="@+id/publishSubject"
      android:background="@drawable/button_background"
      android:textColor="@android:color/white"
      app:layout_constraintTop_toTopOf="@+id/guideline2"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/type_replay"
      android:id="@+id/replaySubject"
      app:layout_constraintTop_toBottomOf="@id/publishSubject"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="16dp"
      android:background="@drawable/button_background"
      android:textColor="@android:color/white"
      app:layout_constraintEnd_toEndOf="parent"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/type_behavior"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      android:id="@+id/behaviorSubject"
      android:background="@drawable/button_background"
      android:textColor="@android:color/white"
      app:layout_constraintTop_toBottomOf="@+id/replaySubject" android:layout_marginTop="16dp"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/type_async"
      android:id="@+id/asyncSubject"
      android:background="@drawable/button_background"
      android:textColor="@android:color/white"
      app:layout_constraintTop_toBottomOf="@id/behaviorSubject" android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
  <TextView
      android:text="@string/rxjava_subjects"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textView"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
      android:textAppearance="@style/TextAppearance.AppCompat.Display1"
      app:layout_constraintBottom_toTopOf="@+id/guideline2"/>
  <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:id="@+id/guideline2"
      app:layout_constraintGuide_percent="0.2" android:orientation="horizontal"/>


</androidx.constraintlayout.widget.ConstraintLayout>